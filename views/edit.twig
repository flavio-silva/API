{%extends "layout.twig"%}
{%block content%}
<form class="form-horizontal" method="post" action="{{path('save')}}">
    {{form_widget(form.children.id)}}
  <div class="form-group">
    <label for="form_name" class="col-sm-2 control-label">Nome</label>
    <div class="col-sm-10">
        {{form_widget(form.children.name, {'attr' : {'class': 'form-control', 'placeholder': 'Digite o nome do produto', 'id':'name'}})}}
    </div>        
    
  </div>
  <div class="form-group">
    <label for="form_description" class="col-sm-2 control-label">Descrição</label>
    <div class="col-sm-10">
    {{form_widget(form.children.description,{'attr':{'class': 'form-control', 'placeholder':'Digite a descrição do produto', 'id': 'description'}})}}
    </div>
  </div>
  
  <div class="form-group">
    <label for="form_value" class="col-sm-2 control-label">Valor</label>
    <div class="col-sm-10">
    {{form_widget(form.children.value,{'attr':{'class': 'form-control', 'placeholder':'Digite o valor do produto', 'id': 'value'}})}}
    </div>
  </div>
  
  <div class="form-group">
    <label for="form_category" class="col-sm-2 control-label">Categoria</label>
    <div class="col-sm-10">
    {{form_widget(form.children.category,{'attr':{'class': 'form-control', 'id': 'category'}})}}
    </div>    
  </div>
    
  <div class="form-group">
    <div class="col-sm-5">
      <button type="submit" class="btn btn-default">Salvar</button>
    </div>
  </div>
  
</form>
{%endblock %}
