{%extends "layout.twig"%}
{%block content%}
<form class="form-inline" method="post" action="{{path('save')}}">  
  <div class="form-group">
    <label for="form_name">Nome</label>
    {{form_widget(form.children.name, {'attr' : {'class': 'form-control', 'placeholder': 'Digite o nome do produto', 'id':'name'}})}}
  </div>
  <div class="form-group">
    <label for="form_description">Descrição</label>
    {{form_widget(form.children.description,{'attr':{'class': 'form-control', 'placeholder':'Digite a descrição do produto', 'id': 'description'}})}}
  </div>
  
  <div class="form-group">
    <label for="form_value">Valor</label>
    {{form_widget(form.children.value,{'attr':{'class': 'form-control', 'placeholder':'Digite o valor do produto', 'id': 'value'}})}}
  </div>
  <button type="submit" class="btn btn-default">Salvar</button>
</form>
{%endblock%}